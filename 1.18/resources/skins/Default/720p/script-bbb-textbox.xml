<window id="3000">
	<defaultcontrol>5</defaultcontrol>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>background-textbox.png</texture>
		</control>
		<control type="image">
			<description>contentpanel slice</description>
			<posx>0</posx>
			<posy>88</posy>
			<width>1280</width>
			<height>654</height>
			<texture>contentpanel.png</texture>
		</control>
		<control type="image">
			<description>background logo</description>
			<posx>5</posx>
			<posy>1</posy>
			<width>155</width>
			<height>90</height>
			<texture>script-logo.png</texture>
			<aspectratio>keep</aspectratio>
			<animation effect="rotate" start="90" end="0" center="0,0" time="200" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
		</control>
		<control type="label" id="1">
			<description>xbox media center label</description>
			<posx>340</posx>
			<posy>40</posy>
			<align>right</align>
			<label>xbox media center</label>
			<font>special12</font>
		</control>
		<control type="label" id="3">
			<description>title</description>
			<posx>355</posx>
			<posy>40</posy>
			<align>left</align>
			<label>title</label>
			<font>special13</font>
		</control>
		<control type="textbox" id="5">
			<description>textarea</description>
			<posx>10</posx>
			<posy>95</posy>
			<width>1260</width>
			<height>565</height>
			<font>font12</font>
			<spinposx>1220</spinposx>
			<spinposy>575</spinposy>
			<animation effect="fade" start="0" end="100" delay="200" time="100" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" delay="0" time="100" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			<autoscroll delay="9000" time="2000" repeat="10000"></autoscroll>
		</control>
	</controls>
</window>