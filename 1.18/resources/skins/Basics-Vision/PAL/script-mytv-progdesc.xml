<window>
	<defaultcontrol>90</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<type>dialog</type>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>60</posy>
	</coordinates>
	<include>dialogeffect</include>

	<controls>
		<control type="group" id="2000">
		<animation effect="fade" time="200" start="100" end="50" condition="!Control.IsEnabled(2000)">conditional</animation>

			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>700</width>
				<height>480</height>
				<texture border="0,45,0,10">Dialog.png</texture>
			</control>
			<control type="label" id="1">
				<description>title</description>
				<posx>120</posx>
				<posy>5</posy>
				<width>520</width>
				<height>32</height>
				<align>center</align>
				<font>font16</font>
				<label>-</label>
				<textcolor>FF6666FF</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label" id="5">
				<description>datetime</description>
				<posx>120</posx>
				<posy>44</posy>
				<width>520</width>
				<height>32</height>
				<align>center</align>
				<font>font11</font>
				<label></label>
			</control>
			<control type="label" id="2">
				<description>sub title</description>
				<posx>120</posx>
				<posy>60</posy>
				<width>520</width>
				<align>center</align>
				<label></label>
				<font>font11</font>
				<textcolor>FFFFFFFF</textcolor>
			</control>
			<control type="label" id="4">
				<description>genre</description>
				<posx>120</posx>
				<posy>80</posy>
				<width>520</width>
				<align>center</align>
				<label></label>
				<font>font10</font>
				<textcolor>FFFFFF99</textcolor>
			</control>
			<control type="textbox" id="6">
				<description>textarea</description>
				<posx>120</posx>
				<posy>100</posy>
				<width>520</width>
				<height>450</height>
				<align>justify</align>
				<pagecontrol>90</pagecontrol>
				<include>white</include>
				<font>font14</font>
				<autoscroll time="3000" delay="4000" repeat="5000">!Skin.HasSetting(AutoScroll)</autoscroll>
			</control>
			<control type="group">
				<posx>145</posx>
				<posy>50</posy>
				<control type="image">
					<posx>-50</posx>
					<posy>380</posy>
					<width>569</width>
					<height>35</height>
					<texture>ListItem_Focus.png</texture>
				</control>
				<control type="image">
					<description>B button image</description>
					<posx>0</posx>
					<posy>388</posy>
					<width>20</width>
					<height>20</height>
					<texture>..\..\Default\media\bbutton.png</texture>
					<visible>Control.IsVisible(7)</visible>
				</control>
				<control type="label" id="7">
					<description>B button label</description>
					<posx>25</posx>
					<posy>390</posy>
					<label></label>
					<font>font10</font>
					<textcolor>FF99FFFF</textcolor>
				</control>
			<control type="image">
				<description>X button image</description>
				<posx>105</posx>
				<posy>388</posy>
				<width>20</width>
				<height>20</height>
				<texture>..\..\Default\media\xbutton.png</texture>
			</control>
			<control type="label" id="8">
				<description>X button label</description>
				<posx>130</posx>
				<posy>390</posy>
				<label></label>
				<font>font10</font>
				<textcolor>FF99FFFF</textcolor>
			</control>
			<control type="image">
				<description>Y button image</description>
				<posx>230</posx>
				<posy>388</posy>
				<width>20</width>
				<height>20</height>
				<texture>..\..\Default\media\ybutton.png</texture>
			</control>
			<control type="label" id="9">
				<description>Y button label</description>
				<posx>255</posx>
				<posy>388</posy>
				<label></label>
				<font>font10</font>
				<textcolor>FF99FFFF</textcolor>
			</control>
			<control type="image">
				<description>A button image</description>
				<posx>355</posx>
				<posy>388</posy>
				<width>20</width>
				<height>20</height>
				<texture>..\..\Default\media\abutton.png</texture>
			</control>
			<control type="label" id="10">
				<description>A button label</description>
				<posx>380</posx>
				<posy>388</posy>
				<label></label>
				<font>font10</font>
				<textcolor>FF99FFFF</textcolor>
			</control>
			<control type="spincontrol" id="90">
				<description>Next page button</description>
				<posx>444</posx>
				<posy>388</posy>
				<subtype>page</subtype>
				<font>font13</font>
				<onleft>6</onleft>
				<onright>6</onright>
				<ondown>90</ondown>
				<onup>90</onup>
				<textcolor>red</textcolor>
				<showonepage>true</showonepage>
			</control>
			</control>
		</control> <!-- end group 2000-->
	</controls>
</window>