<window>
	<defaultcontrol>6</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<controls>

	<control type="group" id="2000">
		<posx>10</posx>
		<posy>418</posy>
		<height>155</height>
		<visible>true</visible>
		<animation effect="slide" time="200" start="0,155" acceleration="-1.1" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
		<animation effect="slide" time="200" end="0,155" acceleration="1.1" condition="!Skin.HasSetting(animated)">WindowClose</animation>
		<animation effect="fade" time="200" start="100" end="50" condition="!Control.IsEnabled(2000)">conditional</animation>

		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>700</width>
			<height>155</height>
			<texture border="20">button-menu-background.png</texture>
		</control>

		<control type="label" id="1">
			<description>title</description>
			<posx>10</posx>
			<posy>5</posy>
			<width>600</width>
			<align>left</align>
			<label></label>
			<font>special13</font>
			<textcolor>FFFFFFFF</textcolor>
		</control>

		<control type="label" id="2">
			<description>sub title</description>
			<posx>10</posx>
			<posy>22</posy>
			<width>500</width>
			<align>left</align>
			<label></label>
			<font>font10</font>
			<textcolor>FFFFFFFF</textcolor>
		</control>

		<control type="label" id="4">
			<description>genre</description>
			<posx>130r</posx>
			<posy>5</posy>
			<width>185</width>
			<align>left</align>
			<label></label>
			<font>font10</font>
			<textcolor>FFFFFF99</textcolor>
		</control>

		<control type="label" id="5">
			<description>datetime</description>
			<posx>10</posx>
			<posy>35</posy>
			<width>400</width>
			<align>left</align>
			<label></label>
			<font>font10</font>
			<textcolor>FFB2D4F5</textcolor>
		</control>

		<control type="textbox" id="6">
			<description>textarea</description>
			<posx>20</posx>
			<posy>50</posy>
			<width>670</width>
			<height>80</height>
			<font>special12</font>
			<textcolor>FFFFFFCC</textcolor>
			<spinposx>485</spinposx>
			<spinposy>287</spinposy>
			<autoscroll time="3000" delay="4000" repeat="5000">!Skin.HasSetting(AutoScroll)</autoscroll>
		</control>

		<control type="image">
			<description>B button image</description>
			<posx>10</posx>
			<posy>130</posy>
			<width>20</width>
			<height>20</height>
			<texture>..\..\Default\media\bbutton.png</texture>
			<visible>Control.IsVisible(7)</visible>
		</control>

		<control type="label" id="7">
			<description>B button label</description>
			<posx>35</posx>
			<posy>132</posy>
			<label></label>
			<font>font10</font>
			<textcolor>FF99FFFF</textcolor>
		</control>

		<control type="image">
			<description>X button image</description>
			<posx>150</posx>
			<posy>130</posy>
			<width>20</width>
			<height>20</height>
			<texture>..\..\Default\media\xbutton.png</texture>
		</control>

		<control type="label" id="8">
			<description>X button label</description>
			<posx>175</posx>
			<posy>132</posy>
			<label></label>
			<font>font10</font>
			<textcolor>FF99FFFF</textcolor>
		</control>

		<control type="image">
			<description>Y button image</description>
			<posx>300</posx>
			<posy>130</posy>
			<width>20</width>
			<height>20</height>
			<texture>..\..\Default\media\ybutton.png</texture>
		</control>

		<control type="label" id="9">
			<description>Y button label</description>
			<posx>325</posx>
			<posy>132</posy>
			<label></label>
			<font>font10</font>
			<textcolor>FF99FFFF</textcolor>
		</control>

		<control type="image">
			<description>BACK button image</description>
			<posx>450</posx>
			<posy>130</posy>
			<width>20</width>
			<height>20</height>
			<texture>..\..\Default\media\backbutton.png</texture>
		</control>

		<control type="label" id="10">
			<description>BACK button label</description>
			<posx>475</posx>
			<posy>132</posy>
			<label></label>
			<font>font10</font>
			<textcolor>FF99FFFF</textcolor>
		</control>

	</control>

	</controls>
</window>