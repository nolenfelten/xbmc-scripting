<window id="3000">
	<defaultcontrol>5</defaultcontrol>
	<controls>
      <control type="group">
        <include>BackgroundFade</include>

        <control type="group">
          <description>TV Shows Background Image</description>
          <include>TVShowsBGVisible</include>

          <control type="image">
            <include>BackgroundLeftImage</include>
            <texture>HomeBGTVShowsLeft.png</texture>
          </control>
          <control type="image">
            <include>BackgroundMidImage</include>
            <texture>HomeBGTVShowsMid.png</texture>
          </control>
          <control type="image">
            <include>BackgroundRightImage</include>
            <texture>HomeBGTVShowsRight.png</texture>
          </control>
        </control>

        <include>CustomTVShowsBackground</include>
      </control>

        <control type="image">
          <width>1280</width>
          <height>720</height>
          <texture>Black.png</texture>
          <colordiffuse>99cccccc</colordiffuse>
        </control>

    <control type="group">
      <posx>40</posx>
      <posy>40</posy>

      <control type="image">
        <description>Dialog Background</description>
        <width>1200</width>
        <height>640</height>
        <texture border="24">DialogBG.png</texture>
      </control>

      <control type="label" id="3">
        <description>Heading</description>
        <label>title</label>
        <posx>20</posx>
        <posy>21</posy>
        <width>1160</width>
        <align>center</align>
        <font>MediumTitleCapsFont</font>
      </control>

      <control type="group">
        <posx>18</posx>
        <posy>48</posy>

        <control type="textbox" id="5">
          <description>Textarea</description>
          <width>1160</width>
          <height>576</height>
        </control>
      </control>
    </control>
    


    <control type="group">
      <include>TopOverlayTitlePos</include>

      <include>TopOverlayFirstTitleAreaBG</include>

      <control type="label">
        <description>Scripts label</description>
        <include>TopOverlayFirstTitleAreaText</include>
        <label>myTV</label>
      </control>
    </control>

    <include>Clock</include>
	</controls>
</window>