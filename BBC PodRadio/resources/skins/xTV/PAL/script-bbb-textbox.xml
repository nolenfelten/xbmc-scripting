<window id="3000">
	<defaultcontrol>5</defaultcontrol>
	<include>shutdown-ani</include>
	<controls>
		<include>background</include>

		<control type="image">
			<description>Settings Logo</description>
			<posx>475</posx>
			<posy>2</posy>
			<width>80</width>
			<height>46</height>
			<aspectratio aligny="bottom">keep</aspectratio>
			<texture>..\..\Default\media\script-logo.png</texture>
		</control>
		<control type="label" id="3">
			<description>description label</description>
			<posx>100</posx>
			<posy>10</posy>
			<label></label>
			<font>font20</font>
			<textcolor>button-text</textcolor>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>10</posx>
			<posy>55</posy>
			<width>700</width>
			<height>505</height>
			<texture border="20">button-menu-background.png</texture>
		</control>
		<control type="textbox" id="5">
			<description>textarea</description>
			<posx>20</posx>
			<posy>58</posy>
			<width>655</width>
			<height>472</height>
			<font>font12</font>
			<textcolor>button-text</textcolor>
			<spinposx>646</spinposx>
			<spinposy>482</spinposy> 
			<autoscroll delay="9000" time="2000" repeat="10000"></autoscroll>
		</control>
	</controls>
</window>