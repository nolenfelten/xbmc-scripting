<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>Common_Background</include>
		<control type="group">
			<include>Window_OpenClose_Animation</include>
			<include>OldListViewCommons</include>
			<include>OldListViewFullCommons</include>
			<include>AllViewCommonThumbSmall</include>
			<include>AllViewCommonThumbBig</include>
			<include>WideIconViewCommons</include>
			<animation effect="fade" time="200" start="100" end="33" condition="!Control.IsEnabled(1000)">conditional</animation>
			<control type="group" id="9001">
				<posx>-345</posx>
				<posy>0</posy>
				<animation effect="slide" time="150" end="345,0" condition="ControlGroup(9001).HasFocus">Conditional</animation>
				<control type="button">
					<posx>0</posx>
					<posy>0</posy>
					<width>400</width>
					<height>720</height>
					<onclick>-</onclick>
					<hitrect x="0" y="0" w="360" h="720" />
					<texturefocus>Side_Slideout.png</texturefocus>
					<texturenofocus>Side_Slideout.png</texturenofocus>
				</control>
				<control type="group" id="9000">
					<posx>0</posx>
					<posy>140</posy>
					<control type="button" id="2">
						<description>View As button</description>
						<posx>0</posx>
						<posy>0</posy>
						<include>ButtonCommonValues</include>
						<label>-</label>
						<onleft>50</onleft>
						<onright>50</onright>
						<onup>21</onup>
						<ondown>20</ondown>
					</control>
					<control type="button" id="20">
						<description>previous page button</description>
						<posx>0</posx>
						<posy>45</posy>
						<include>ButtonCommonValues</include>
						<label></label>
						<onleft>50</onleft>
						<onright>50</onright>
						<onup>2</onup>
						<ondown>21</ondown>
					</control>
					<control type="button" id="21">
						<description>next page button</description>
						<posx>0</posx>
						<posy>90</posy>
						<include>ButtonCommonValues</include>
						<label></label>
						<onleft>50</onleft>
						<onright>50</onright>
						<onup>20</onup>
						<ondown>2</ondown>
					</control>
				</control>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>90</height>
				<texture>Topbar.png</texture>
			</control>
			<control type="label" id="1002">
				<description>Title label</description>
				<posx>285</posx>
				<posy>20</posy>
				<width>600</width>
				<height>42</height>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label></label>
				<font>font16b</font>
			</control>
			<include>Common_Now_Playing</include>
			<include>Common_File_Count</include>
			<include>AllViewCommonPageControls</include>
		</control>

		<!-- GROUP HEADER -->
		<control type="group" id="1000">
			<description>group header</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>128</height>
			<visible>true</visible> 
			<include>Window_OpenClose_Animation</include>
			<animation effect="fade" time="200" start="100" end="33" condition="!Control.IsEnabled(1000)">conditional</animation>

			<control type="image">
				<description>script logo</description>
				<posx>2</posx>
				<posy>2</posy>
				<width>230</width>
				<height>80</height>
				<texture>script-logo.png</texture>
				<aspectratio>keep</aspectratio>
				<animation effect="rotate" start="90" end="0" center="0,0" time="300" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
				<animation effect="rotate" end="90" center="0,0" time="200" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			</control>
			<control type="label">
				<description>CLOCK</description>
				<posx>4r</posx>
				<posy>2</posy>
				<width>85</width>
				<height>25</height>
				<font>font14</font>
				<info>System.Time</info>
				<align>right</align>
				<textcolor>white</textcolor>
			</control>
			<control type="label" id="1001">
				<description>version</description>
				<posx>4r</posx>
				<posy>30</posy>
				<align>right</align>
				<label></label>
				<textcolor>grey</textcolor>
				<font>font10</font>
			</control>
		</control> <!-- end group header -->

		<!--  PAD BUTTONS -->
		<control type="group" id="3000">
			<posx>380</posx>
			<posy>660</posy>
			<animation effect="slide" time="200" start="0,40" acceleration="-1.1" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
			<animation effect="slide" time="200" end="0,40" acceleration="1.1" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			<animation effect="fade" time="200" start="100" end="30" condition="!Control.IsEnabled(1000)">conditional</animation>
			<visible>true</visible>

			<control type="image">
				<description>BACK button</description>
				<posx>0</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>backbutton.png</texture>
			</control>
			<control type="label" id="3001">
				<description>BACK label</description>
				<posx>25</posx>
				<posy>2</posy>
				<label></label>
				<font>font10</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<description>WHITE button</description>
				<posx>110</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>whitebutton.png</texture>
			</control>
			<control type="label" id="3002">
				<description>WHITE label</description>
				<posx>135</posx>	
				<posy>2</posy>
				<label></label>
				<font>font10</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<description>B button</description>
				<posx>220</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>bbutton.png</texture>
			</control>
			<control type="label" id="3004">
				<description>B label</description>
				<posx>245</posx>	
				<posy>2</posy>
				<label></label>
				<font>font10</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<description>Select button</description>
				<posx>330</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>abutton.png</texture>
			</control>
			<control type="label" id="3003">
				<description>A label</description>
				<posx>355</posx>	
				<posy>2</posy>
				<label></label>
				<font>font10</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<description>Y button</description>
				<posx>470</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>ybutton.png</texture>
				<visible>Control.IsVisible(3005)</visible>
			</control>
			<control type="label" id="3005">
				<description>Y label</description>
				<posx>495</posx>	
				<posy>2</posy>
				<label></label>
				<font>font10</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
		</control> <!-- end group PAD -->

	</controls>
</window>