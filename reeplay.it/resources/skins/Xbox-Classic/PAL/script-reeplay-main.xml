<window>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="visualisation">
			<description>visualisation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<visible>Skin.HasSetting(VisBackground)</visible>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
		</control>
		<include>Controller_Image</include>
		<control type="label" id="12">
			<description>number of files text label</description>
			<posx>225</posx>
			<posy>525</posy>
			<label>-</label>
			<font>font13</font>
			<textcolor>yellow</textcolor>
			<include>Slide_From_Right_Animation</include>
		</control>

		<control type="group" id="9000">
			<include>Slide_From_Left_Animation</include>
			<animation effect="fade" time="200" start="100" end="33" condition="!Control.IsEnabled(1000)">conditional</animation>
			<posx>45</posx>
			<control type="image">
				<description>panel</description>
				<posx>0</posx>
				<posy>115</posy>
				<height>250</height>
				<width>150</width>
				<texture>panel.png</texture>
			</control>
			<control type="button" id="2">
				<description>view as icons button</description>
				<posx>5</posx>
				<posy>120</posy>
				<label>100</label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>20</onup>
				<ondown>20</ondown>
				<texturenofocus>-</texturenofocus>
			</control>
			<control type="image">
				<description>Middle panel Bar</description>
				<posx>0</posx>
				<posy>147</posy>
				<height>20</height>
				<width>150</width>
				<texture>middle-bar.png</texture>
			</control>
			<control type="button" id="20">
				<description>previous</description>
				<posx>5</posx>
				<posy>167</posy>
				<label>103</label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>2</onup>
				<ondown>21</ondown>
				<texturenofocus>-</texturenofocus>
			</control>
			<control type="button" id="21">
				<description>next</description>
				<posx>5</posx>
				<posy>207</posy>
				<label>103</label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>20</onup>
				<ondown>2</ondown>
				<texturenofocus>-</texturenofocus>
			</control>
		</control>
		
		<control type="group">
			<animation effect="fade" time="200" start="100" end="33" condition="!Control.IsEnabled(1000)">conditional</animation>
			<include>ListItemIcon</include>
			<include>OldCommonListView</include>
			<include>ProgramsCommonListView</include>
			<include>AllViewCommonThumbLarge</include>
			<include>AllViewCommonThumbSmall</include>
			<include>AllCommonPageControls</include>
		</control>

		<!-- GROUP HEADER -->
		<control type="group" id="1000">
			<description>group header</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>200</height>
			<visible>true</visible> 
			<animation effect="fade" time="200" start="100" end="33" condition="!Control.IsEnabled(1000)">conditional</animation>

			<control type="image">
				<description>script logo</description>
				<posx>2</posx>
				<posy>2</posy>
				<width>188</width>
				<height>90</height>
				<texture>script-logo.png</texture>
				<aspectratio>keep</aspectratio>
				<animation effect="rotate" start="90" end="0" center="0,0" time="300" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
				<animation effect="rotate" end="90" center="0,0" time="200" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			</control>
			<control type="label">
				<description>CLOCK</description>
				<posx>4r</posx>
				<posy>2</posy>
				<width>85</width>
				<height>25</height>
				<font>font11</font>
				<info>System.Time</info>
				<align>right</align>
				<textcolor>white</textcolor>
				<include>Slide_From_Right_Animation</include>
			</control>
			<control type="label" id="1001">
				<description>version</description>
				<posx>4r</posx>
				<posy>30</posy>
				<align>right</align>
				<label></label>
				<textcolor>grey</textcolor>
				<font>font10</font>
				<include>Slide_From_Right_Animation</include>
			</control>
			<control type="label" id="1002">
				<description>title label</description>
				<posx>195</posx>
				<posy>40</posy>
				<align>left</align>
				<label></label>
				<width>900</width>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>font14</font>
				<scroll>true</scroll>
				<include>Slide_From_Right_Animation</include>
			</control>
		</control> <!-- end group header -->

		<!--  PAD BUTTONS -->
		<control type="group" id="3000">
			<posx>200</posx>
			<posy>550</posy>
			<animation effect="slide" time="200" start="0,40" acceleration="-1.1" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
			<animation effect="slide" time="200" end="0,40" acceleration="1.1" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			<animation effect="fade" time="200" start="100" end="30" condition="!Control.IsEnabled(1000)">conditional</animation>
			<animation effect="fade" time="200">Visible</animation>
			<animation effect="fade" time="200">Hidden</animation>
			<visible>true</visible>

			<control type="image">
				<description>BACK button</description>
				<posx>0</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>backbutton.png</texture>
			</control>
			<control type="label" id="3001">
				<description>BACK label</description>
				<posx>25</posx>
				<posy>4</posy>
				<label>Exit</label>
				<font>font11</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<description>WHITE button</description>
				<posx>95</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>whitebutton.png</texture>
			</control>
			<control type="label" id="3002">
				<description>WHITE label</description>
				<posx>120</posx>	
				<posy>4</posy>
				<label>Menu</label>
				<font>font11</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<description>B button</description>
				<posx>190</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>bbutton.png</texture>
			</control>
			<control type="label" id="3004">
				<description>B label</description>
				<posx>215</posx>	
				<posy>4</posy>
				<label></label>
				<font>font11</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<description>A button</description>
				<posx>285</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>abutton.png</texture>
			</control>
			<control type="label" id="3003">
				<description>A label</description>
				<posx>310</posx>	
				<posy>4</posy>
				<label>Select</label>
				<font>font11</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<description>Y button</description>
				<posx>400</posx>
				<posy>2</posy>
				<width>25</width>
				<height>25</height>
				<texture>ybutton.png</texture>
				<visible>Control.IsVisible(3005)</visible>
			</control>
			<control type="label" id="3005">
				<description>Y label</description>
				<posx>425</posx>	
				<posy>4</posy>
				<label></label>
				<font>font11</font>
				<align>left</align>
				<textcolor>white</textcolor>
			</control>
		</control> <!-- end group PAD -->
	</controls>
</window>