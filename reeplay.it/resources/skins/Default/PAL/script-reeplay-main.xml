<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="group">
		<animation effect="fade" time="200" start="100" end="33" condition="!Control.IsEnabled(1000)">conditional</animation>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>88</height>
			<texture>background-apps.png</texture>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>88</posy>
			<width>720</width>
			<height>488</height>
			<texture>background-bottom.png</texture>
		</control>
		<include>contentpanel</include>
		<control type="label" id="12">
			<description>number of files text label</description>
			<posx>545</posx>
			<posy>540</posy>
			<align>right</align>
			<label>-</label>
			<font>font10</font>
			<include>contentpanelslide</include>
		</control>
		</control>


		<control type="group" id="9000">
			<posx>20</posx>
			<posy>100</posy>
			<include>buttonpanelslide</include>
			<animation effect="fade" time="200" start="100" end="30" condition="!Control.IsEnabled(1000)">conditional</animation>

			<control type="button" id="2">
				<description>View As button</description>
				<posx>0</posx>
				<posy>0</posy>
				<label>100</label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>20</onup>
				<ondown>20</ondown>
			</control>
			<control type="button" id="20">
				<description>prev page</description>
				<posx>0</posx>
				<posy>50</posy>
				<include>ButtonCommonValues</include>
				<label></label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>2</onup>
				<ondown>21</ondown>
				<visible>true</visible>
			</control>
			<control type="button" id="21">
				<description>next page</description>
				<posx>0</posx>
				<posy>100</posy>
				<include>ButtonCommonValues</include>
				<label></label>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>20</onup>
				<ondown>2</ondown>
				<visible>true</visible>
			</control>
		</control>
		<include>OldListViewCommons</include>
		<include>AllViewCommonThumbSmall</include>
		<include>AllViewCommonThumbLarge</include>
		<include>ProgramsThumbWrapView</include>
		<include>AllViewCommonPageControls</include>
		<include>ScrollOffsetLabel</include>
		<include>windowswitchtransition</include>


		<!-- GROUP HEADER -->
		<control type="group" id="1000">
			<description>group header</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>128</height>
			<visible>true</visible> 
			<include>Window_OpenClose_Animation</include>
			<include>VisibleFadeEffect</include>
			<animation effect="fade" time="200" start="100" end="33" condition="!Control.IsEnabled(1000)">conditional</animation>

			<control type="image">
				<description>script logo</description>
				<posx>2</posx>
				<posy>2</posy>
				<width>188</width>
				<height>90</height>
				<texture>script-logo.png</texture>
				<aspectratio>keep</aspectratio>
				<animation effect="rotate" start="90" end="0" center="0,0" time="300" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
				<animation effect="rotate" end="90" center="0,0" time="200" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			</control>
			<control type="label">
				<description>CLOCK</description>
				<posx>4r</posx>
				<posy>2</posy>
				<width>85</width>
				<height>25</height>
				<font>font11</font>
				<info>System.Time</info>
				<align>right</align>
				<textcolor>white</textcolor>
			</control>
			<control type="label" id="1001">
				<description>version</description>
				<posx>4r</posx>
				<posy>30</posy>
				<align>right</align>
				<label></label>
				<textcolor>grey2</textcolor>
				<font>font10</font>
			</control>
			<control type="label" id="1002">
				<description>title label</description>
				<posx>195</posx>
				<posy>40</posy>
				<align>left</align>
				<label></label>
				<width>900</width>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>special14</font>
				<scroll>true</scroll>
			</control>
		</control> <!-- end group header -->

	<!--  PAD BUTTONS -->
	<control type="group" id="3000">
		<posx>300</posx>
		<posy>680</posy>
		<animation effect="slide" time="200" start="0,40" acceleration="-1.1" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
		<animation effect="slide" time="200" end="0,40" acceleration="1.1" condition="!Skin.HasSetting(animated)">WindowClose</animation>
		<animation effect="fade" time="200" start="100" end="30" condition="!Control.IsEnabled(1000)">conditional</animation>
		<animation effect="fade" time="200">Visible</animation>
		<animation effect="fade" time="200">Hidden</animation>
		<visible>true</visible>

		<control type="image">
			<description>BACK button</description>
			<posx>0</posx>
			<posy>2</posy>
			<width>25</width>
			<height>25</height>
			<texture>backbutton.png</texture>
		</control>
		<control type="label" id="3001">
			<description>BACK label</description>
			<posx>30</posx>
			<posy>2</posy>
			<label>Exit</label>
			<font>font11</font>
			<align>left</align>
			<textcolor>white</textcolor>
		</control>
		<control type="image">
			<description>WHITE button</description>
			<posx>110</posx>
			<posy>2</posy>
			<width>25</width>
			<height>25</height>
			<texture>whitebutton.png</texture>
		</control>
		<control type="label" id="3002">
			<description>WHITE label</description>
			<posx>140</posx>	
			<posy>2</posy>
			<label>Menu</label>
			<font>font11</font>
			<align>left</align>
			<textcolor>white</textcolor>
		</control>
		<control type="image">
			<description>A button</description>
			<posx>220</posx>
			<posy>2</posy>
			<width>25</width>
			<height>25</height>
			<texture>abutton.png</texture>
		</control>
		<control type="label" id="3003">
			<description>A label</description>
			<posx>250</posx>	
			<posy>2</posy>
			<label>Select</label>
			<font>font11</font>
			<align>left</align>
			<textcolor>white</textcolor>
		</control>
		<control type="image">
			<description>B button</description>
			<posx>330</posx>
			<posy>2</posy>
			<width>25</width>
			<height>25</height>
			<texture>bbutton.png</texture>
		</control>
		<control type="label" id="3004">
			<description>B label</description>
			<posx>360</posx>	
			<posy>2</posy>
			<label>Back</label>
			<font>font11</font>
			<align>left</align>
			<textcolor>white</textcolor>
		</control>
	</control> <!-- end group PAD -->

	</controls>
</window>