<window id="3000">
	<defaultcontrol>90</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>Common_Background</include>
		<control type="group">
			<include>Window_OpenClose_Animation</include>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>720</width>
				<height>72</height>
				<texture>Topbar.png</texture>
			</control>
			<control type="label" id="3">
				<description>Title label</description>
				<posx>23</posx>
				<posy>16</posy>
				<width>338</width>
				<height>34</height>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>XBMC Changelog</label>
				<font>font16b</font>
			</control>
			<include>Common_Now_Playing</include>
			<control type="image">
				<description>Background image</description>
				<posx>17</posx>
				<posy>68</posy>
				<width>346</width>
				<height>440</height>
				<texture border="10,10,0,10">Info_Panel.png</texture>
			</control>
			<control type="image">
				<description>Background image</description>
				<posx>363</posx>
				<posy>68</posy>
				<width>346</width>
				<height>440</height>
				<texture flipx="true" border="0,10,10,10">Info_Panel.png</texture>
			</control>
			<control type="textbox" id="5">
				<description>textarea</description>
				<posx>25</posx>
				<posy>76</posy>
				<width>661</width>
				<height>424</height>
				<pagecontrol>90</pagecontrol>
				<include>white</include>
				<font>font13</font>
				<autoscroll delay="9000" time="2000" repeat="10000"></autoscroll>
			</control>
			<control type="group">
				<posx>169r</posx>
				<posy>520</posy>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>169</width>
					<height>35</height>
					<texture>Slider_focus_left.png</texture>
				</control>
				<control type="spincontrol" id="90">
					<description>Next page button</description>
					<posx>124</posx>
					<posy>8</posy>
					<subtype>page</subtype>
					<font>font13</font>
					<onleft>5</onleft>
					<onright>5</onright>
					<ondown>90</ondown>
					<onup>90</onup>
					<textcolor>red</textcolor>
					<showonepage>true</showonepage>
				</control>
			</control>
		</control>
	</controls>
</window>