<window>
	<defaultcontrol>6</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<type>dialog</type>
	<coordinates>
		<system>1</system>
		<posx>40</posx>
		<posy>70</posy>
	</coordinates>
	<controls>

	<control type="group" id="2000">
		<width>640</width>
		<height>460</height>
		<animation effect="fade" time="200" start="100" end="50" condition="!Control.IsEnabled(2000)">conditional</animation>

		<control type="image">
			<description>background image</description>
			<width>1195</width>
			<height>570</height>
			<texture border="6">menu_back.png</texture>
		</control>

		<control type="label" id="1">
			<description>title</description>
			<posx>30</posx>
			<posy>15</posy>
			<width>600</width>
			<align>left</align>
			<label></label>
			<font>special13</font>
			<textcolor>FFFFFFFF</textcolor>
		</control>
		<control type="label" id="2">
			<description>sub title</description>
			<posx>30</posx>
			<posy>35</posy>
			<width>600</width>
			<align>left</align>
			<label></label>
			<font>special12</font>
			<textcolor>FFFFFFFF</textcolor>
		</control>
		<control type="label" id="4">
			<description>genre</description>
			<posx>30</posx>
			<posy>60</posy>
			<width>600</width>
			<align>left</align>
			<label></label>
			<font>font10</font>
			<textcolor>FFFFFF99</textcolor>
		</control>
		<control type="label" id="5">
			<description>datetime</description>
			<posx>30</posx>
			<posy>80</posy>
			<width>600</width>
			<align>left</align>
			<label></label>
			<font>font10</font>
			<textcolor>FFB2D4F5</textcolor>
		</control>
		<control type="textbox" id="6">
			<description>textarea</description>
			<posx>30</posx>
			<posy>100</posy>
			<width>1150</width>
			<height>540</height>
			<font>special12</font>
			<textcolor>FFFFFFCC</textcolor>
			<spinposx>1100</spinposx>
			<spinposy>445</spinposy>
			<autoscroll time="3000" delay="4000" repeat="5000">!Skin.HasSetting(AutoScroll)</autoscroll>
		</control>

		<control type="image">
			<description>B button image</description>
			<posx>30</posx>
			<posy>540</posy>
			<width>20</width>
			<height>20</height>
			<texture>bbutton.png</texture>
			<visible>Control.IsVisible(7)</visible>
		</control>
		<control type="label" id="7">
			<description>B button label</description>
			<posx>65</posx>
			<posy>540</posy>
			<label></label>
			<font>font10</font>
			<textcolor>FF99FFFF</textcolor>
		</control>

		<control type="image">
			<description>X button image</description>
			<posx>185</posx>
			<posy>540</posy>
			<width>20</width>
			<height>20</height>
			<texture>xbutton.png</texture>
		</control>
		<control type="label" id="8">
			<description>X button label</description>
			<posx>220</posx>
			<posy>540</posy>
			<label></label>
			<font>font10</font>
			<textcolor>FF99FFFF</textcolor>
		</control>

		<control type="image">
			<description>Y button image</description>
			<posx>370</posx>
			<posy>540</posy>
			<width>20</width>
			<height>20</height>
			<texture>ybutton.png</texture>
		</control>
		<control type="label" id="9">
			<description>Y button label</description>
			<posx>405</posx>
			<posy>540</posy>
			<label></label>
			<font>font10</font>
			<textcolor>FF99FFFF</textcolor>
		</control>

		<control type="image">
			<description>BACK button image</description>
			<posx>555</posx>
			<posy>540</posy>
			<width>20</width>
			<height>20</height>
			<texture>backbutton.png</texture>
		</control>
		<control type="label" id="10">
			<description>BACK button label</description>
			<posx>575</posx>
			<posy>540</posy>
			<label></label>
			<font>font10</font>
			<textcolor>FF99FFFF</textcolor>
		</control>

	</control>

	</controls>
</window>