<window id="3000">
	<defaultcontrol>6</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>88</posy>
			<width>720</width>
			<height>576</height>
			<texture>background-bottom.png</texture>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>88</height>
			<texture>background-apps.png</texture>
		</control>
		<control type="image">
			<description>contentpanel slice</description>
			<posx>0</posx>
			<posy>88</posy>
			<width>720</width>
			<height>510</height>
			<texture>contentpanel.png</texture>
		</control>

		<control type="label" id="1">
			<description>xbox media center label</description>
			<posx>350</posx>
			<posy>43</posy>
			<align>right</align>
			<label>$LOCALIZE[9] - $INFO[Control.GetLabel(3)]</label>
			<font>special12</font>
		</control>
		<control type="label" id="3">
			<description>title - Fake Label so we can pass it value down to the one above</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>0</width>
			<height>0</height>
			<font>-</font>
			<visible>false</visible>
		</control>

		<control type="group">
			<animation effect="fade" start="0" end="100" delay="200" time="100" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" delay="0" time="100" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			<control type="textbox" id="5">
				<description>textarea</description>
				<posx>5</posx>
				<posy>95</posy>
				<width>690</width>
				<height>430</height>
				<font>font11</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<pagecontrol>6</pagecontrol>
				<autoscroll delay="9000" time="2000" repeat="10000"></autoscroll>
			</control>
			<control type="scrollbar" id="6">
				<posx>20r</posx>
				<posy>95</posy>
				<width>20</width>
				<height>430</height>
				<texturesliderbackground border="4">scrollbar_background.png</texturesliderbackground>
				<texturesliderbar border="4">scrollbar_bar.png</texturesliderbar>
				<texturesliderbarfocus border="4">scrollbar_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<onleft>6</onleft>
				<onright>6</onright>
				<ondown>6</ondown>
				<onup>6</onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
		</control>
	</controls>
</window>